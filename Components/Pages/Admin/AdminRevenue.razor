<canvas id="revenueChart" style="width: 00px; height: 350px;"></canvas>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var totalRevenue = @((model != null ? model.TotalRevenue : 0));
    var totalBooking = @((model != null ? model.TotalBooking : 0));
    var totalRoom = @((model != null ? model.TotalRoom : 0));
    var totalCustomer = @((model != null ? model.TotalCustomer : 0));
    var totalStaff = @((model != null ? model.TotalStaff : 0));

    var ctx = document.getElementById('revenueChart').getContext('2d');
    var revenueChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Total Revenue', 'Total Booking', 'Total Room', 'Total Customer', 'Total Staff'],
            datasets: [{
                label: 'Statistics',
                data: [totalRevenue, totalBooking, totalRoom, totalCustomer, totalStaff],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.7)', // Đỏ
                    'rgba(54, 162, 235, 0.7)', // Xanh lam
                    'rgba(255, 206, 86, 0.7)', // Vàng
                    'rgba(75, 192, 192, 0.7)', // Cyan
                    'rgba(153, 102, 255, 0.7)' // Tím
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
</script>



