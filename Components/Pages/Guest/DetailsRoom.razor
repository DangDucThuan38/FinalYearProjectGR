@page "/guest/details-room"
@inject IRoomServices RoomServices

<style>
    .room-details {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: 0 auto;
    }

    .room-image img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
    }

    .room-info {
        flex-grow: 1;
        margin-left: 20px;
        font-family: 'Roboto', sans-serif;
        font-size: 16px;
        color: #27314A;
    }

        .room-info h4 {
            margin-top: 0;
            font-size: 28px;
            color: #27314A;
            margin-bottom: 10px;
            transition: color 0.3s ease;
        }

            .room-info h4:hover {
                color: papayawhip;
            }

        .room-info p {
            margin: 5px 0;
            color: #555;
        }

        .room-info strong {
            color: #333;
        }

        .room-info ul {
            list-style: none;
            padding: 0;
        }

            .room-info ul li {
                margin-bottom: 5px;
                color: #777;
            }

                .room-info ul li img {
                    max-width: 20px;
                    height: auto;
                    margin-right: 5px;
                    vertical-align: middle;
                }

                .room-info ul li small {
                    color: #777;
                }

                .room-info ul li i {
                    color: #007bff;
                }

    .view-count {
        text-align: center;
        margin-top: 20px;
        font-size: 18px;
        color: #555;
    }
</style>

@if (RoomType != null)
{
    <div class="room-details">
        <div class="room-image">
            <img src="@RoomType.Image" alt="Room Image" />
        </div>
        <div class="room-info">
            <h4>@RoomType.Name</h4>
            <p><strong>Room ID:</strong> @RoomType.id</p>
            <p><strong>Max Adults:</strong> @RoomType.MaxAults</p>
            <p><strong>Max Children:</strong> @RoomType.MaxChildren</p>
            <p><strong>Price:</strong> @RoomType.Price.ToString("#,##0")<small> VND/Night</small></p>
            <p><strong>Amenities:</strong></p>
            <ul>
                @foreach (var amenity in RoomType.Amenities)
                {
                    <li>
                        <small>
                            <i class="@amenity.Icon text-primary me-2"></i>
                            @amenity.Unit @amenity.name
                        </small>
                    </li>
                }
            </ul>
            <p><strong>Description:</strong> @RoomType.Description</p>
        </div>
    </div>
@*     <div class="view-count">
        <i class="fas fa-eye"></i>
        Total Views: @RoomType.view
    </div> *@
}

else
{
    <p>Loading...</p>
}


@code {
    public RoomTyePublicDetalis RoomType { get; set; }
    [Inject]
    private NavigationManager NavigationManager { get; set; }

    [Parameter]
    public short Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var uri = new Uri(NavigationManager.Uri);
        var query = uri.Query;
        var queryDictionary = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(query);
        var IdRoomType = queryDictionary["IdRoom"];
        Id = short.Parse(IdRoomType);
        var view = await RoomServices.GetRoomCount(Id);
        RoomType = await RoomServices.GetRoomTypeDetailsAsnyc(Id);


    }
}
